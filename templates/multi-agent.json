{
  "_comment": "Template ConfiguraÃ§Ã£o OpenClaw Multi-Agent (2-3 agentes)",
  "_aviso": "Substitua TODOS valores placeholder. Nunca faÃ§a commit de API keys reais!",
  "_agentes": "Config inclui 'main' (pessoal), 'work' (trabalho), 'tech' (tÃ©cnico)",
  
  "meta": {
    "lastTouchedVersion": "2026.1.30"
  },
  
  "env": {
    "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
    "OPENAI_API_KEY": "${OPENAI_API_KEY}",
    "SLACK_PERSONAL_BOT_TOKEN": "${SLACK_PERSONAL_BOT_TOKEN}",
    "SLACK_PERSONAL_APP_TOKEN": "${SLACK_PERSONAL_APP_TOKEN}",
    "SLACK_WORK_BOT_TOKEN": "${SLACK_WORK_BOT_TOKEN}",
    "SLACK_WORK_APP_TOKEN": "${SLACK_WORK_APP_TOKEN}"
  },
  
  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "loopback",
    "auth": {
      "mode": "token",
      "token": "GERE-COM-openssl-rand-hex-32"
    }
  },
  
  "agents": {
    "defaults": {
      "workspace": "/Users/seunome/.openclaw/workspace",
      "maxConcurrent": 2,
      "model": "anthropic/claude-sonnet-4-5",
      "memory": {
        "shared": false
      }
    },
    "list": [
      {
        "id": "main",
        "workspace": "/Users/seunome/.openclaw/workspace-main",
        "model": "anthropic/claude-opus-4-5",
        "identity": {
          "name": "Main",
          "emoji": "âš¡"
        },
        "memory": {
          "namespace": "main"
        }
      },
      {
        "id": "work",
        "workspace": "/Users/seunome/.openclaw/workspace-work",
        "identity": {
          "name": "Work",
          "emoji": "ðŸ“Š"
        },
        "memory": {
          "namespace": "work"
        }
      },
      {
        "id": "tech",
        "workspace": "/Users/seunome/.openclaw/workspace-tech",
        "model": "openai/gpt-4o",
        "identity": {
          "name": "Tech",
          "emoji": "ðŸ’»"
        },
        "memory": {
          "namespace": "tech"
        }
      }
    ]
  },
  
  "channels": {
    "whatsapp": {
      "accounts": {
        "pessoal": {
          "agent": "main",
          "dmPolicy": "pairing",
          "debounceMs": 2000
        },
        "trabalho": {
          "agent": "work",
          "dmPolicy": "allowlist",
          "debounceMs": 2000
        }
      }
    },
    
    "slack": {
      "mode": "socket",
      "enabled": true,
      "accounts": {
        "pessoal": {
          "agent": "main",
          "botToken": "${SLACK_PERSONAL_BOT_TOKEN}",
          "appToken": "${SLACK_PERSONAL_APP_TOKEN}"
        },
        "empresa": {
          "agent": "work",
          "botToken": "${SLACK_WORK_BOT_TOKEN}",
          "appToken": "${SLACK_WORK_APP_TOKEN}",
          "groupPolicy": "allowlist",
          "groups": {
            "C01234ABCDE": true
          }
        }
      }
    }
  },
  
  "plugins": {
    "slots": {
      "memory": "memory-postgres"
    },
    "entries": {
      "whatsapp": {
        "enabled": true
      },
      "slack": {
        "enabled": true
      },
      "memory-postgres": {
        "enabled": true,
        "config": {
          "host": "localhost",
          "port": 5432,
          "database": "openclaw_memory",
          "user": "seu-usuario",
          "password": "",
          "embeddingApiKey": "${OPENAI_API_KEY}",
          "embeddingModel": "text-embedding-3-small"
        }
      }
    }
  },
  
  "logging": {
    "level": "info",
    "redactSensitive": "tools"
  }
}
