{
  "gateway": {
    "host": "127.0.0.1",
    "port": 8080,
    "auth": {
      "enabled": true,
      "token": "${GATEWAY_AUTH_TOKEN}"
    }
  },
  "agents": [
    {
      "id": "claudia",
      "name": "Claudia",
      "model": "anthropic/claude-sonnet-4",
      "systemPrompt": "Você é Claudia, assistente executiva em português brasileiro. Seja profissional, eficiente e proativa. Gerencie calendário, emails e tarefas.",
      "thinking": {
        "enabled": false
      }
    },
    {
      "id": "analista",
      "name": "Analista",
      "model": "anthropic/claude-opus-4",
      "systemPrompt": "Você é um analista técnico especializado. Responda com dados, análises profundas e insights acionáveis. Use thinking para problemas complexos.",
      "thinking": {
        "enabled": true
      }
    },
    {
      "id": "criativo",
      "name": "Criativo",
      "model": "openai/gpt-4o",
      "systemPrompt": "Você é um assistente criativo. Ajude com brainstorming, escrita criativa, marketing e design de conteúdo.",
      "thinking": {
        "enabled": false
      }
    }
  ],
  "channels": {
    "webchat": {
      "enabled": true,
      "defaultAgent": "claudia"
    },
    "slack": {
      "enabled": true,
      "token": "${SLACK_BOT_TOKEN}",
      "appToken": "${SLACK_APP_TOKEN}",
      "socketMode": true,
      "dmPolicy": "allowlist",
      "allowlist": ["${SLACK_USER_ID}"],
      "groupPolicy": "allowlist",
      "allowedChannels": [],
      "defaultAgent": "claudia"
    },
    "whatsapp": {
      "enabled": false,
      "token": "${WHATSAPP_TOKEN}",
      "phoneNumberId": "${WHATSAPP_PHONE_ID}",
      "dmPolicy": "allowlist",
      "allowlist": ["${YOUR_PHONE_NUMBER}"],
      "defaultAgent": "claudia"
    }
  },
  "plugins": {
    "memory-postgres": {
      "enabled": true,
      "config": {
        "connectionString": "${DATABASE_URL}",
        "embeddingProvider": "openai",
        "embeddingModel": "text-embedding-3-small",
        "embeddingDimensions": 1536,
        "maxMemories": 100,
        "similarityThreshold": 0.7
      }
    }
  },
  "embeddings": {
    "provider": "openai",
    "model": "text-embedding-3-small",
    "dimensions": 1536
  },
  "routing": {
    "enabled": true,
    "rules": [
      {
        "pattern": "analise|análise|dados|metrics|relatório",
        "agent": "analista"
      },
      {
        "pattern": "criativo|marketing|brainstorm|escreva|design",
        "agent": "criativo"
      }
    ]
  },
  "logging": {
    "level": "info",
    "redactPatterns": [
      "password",
      "token",
      "api_key",
      "secret"
    ]
  },
  "media": {
    "maxSizeMB": 50,
    "maxDuration": 600,
    "allowedTypes": [
      "image/jpeg",
      "image/png",
      "image/gif",
      "image/webp",
      "audio/mpeg",
      "audio/wav",
      "video/mp4"
    ]
  },
  "rateLimit": {
    "enabled": true,
    "maxMessagesPerMinute": 20,
    "maxMessagesPerHour": 200,
    "burstSize": 10
  }
}
